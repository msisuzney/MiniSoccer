<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="0.2dp"
            app:civ_shadow_radius="0.8"/>

        <TextView

            android:id="@+id/nameRaw"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignTop="@id/icon"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/icon"
            android:gravity="center"

            android:textColor="@android:color/black"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/nameZh"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignStart="@id/nameRaw"
            android:layout_marginTop="27dp"
            android:textSize="12sp"/>

        <ImageView
            android:transitionName="sharedImgView"
            android:id="@+id/type"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/nameRaw"
            />
        <TextView
            android:id="@+id/published"
            android:textSize="11sp"
            android:layout_alignTop="@id/nameRaw"
            android:layout_marginEnd="25dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/contentZh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/contentRaw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#DBDBDB"
        android:padding="6dp"
        android:textSize="13sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <ImageView
        android:id="@+id/twinsPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</android.widget.LinearLayout>
