<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:minHeight="40dip"
              android:background="@drawable/recyclerview_touch"
              android:layout_height="40dp">
<TextView
    android:textColor="@android:color/black"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:id="@+id/rv_item_person_rank"
    android:layout_weight="1"
    android:gravity="center"
    />
    <ImageView
        android:id="@+id/rv_item_person_img"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_height="30dp"/>
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/rv_item_person_name"
        android:layout_weight="1.5"
        android:maxLines="1"
        android:gravity="center|start"
        android:text=""
        />
    <TextView
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/rv_item_person_team"
        android:layout_weight="1.7"
        android:gravity="center"

        />
    <TextView
        android:textColor="@android:color/black"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/rv_item_person_count"
        android:layout_weight="1.2"
        android:gravity="center"

        />
</LinearLayout>