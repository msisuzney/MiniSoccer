<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:minHeight="35dp"
              android:layout_height="35dp">
        <TextView
            android:layout_weight="1"
          android:layout_gravity="center_horizontal"
            android:id="@+id/item_team_schedule_detail_time"
            android:textSize="8sp"
            android:text="2016- 07-16 15:30"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/item_team_schedule_detail_competition_name"
            android:textSize="11sp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/item_team_schedule_detail_home"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:gravity="center|right"
        android:textSize="12sp"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/item_team_schedule_detail_img"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="25dp"/>
    <TextView
        android:id="@+id/item_team_schedule_detail_score"
        android:gravity="center"
        android:layout_weight="0.6"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        />
    <ImageView
        android:id="@+id/item_team_schedule_detail_visit_img"
        android:layout_gravity="center"
        android:layout_weight="0.8"
        android:layout_width="0dp"
        android:layout_height="25dp"/>
    <TextView
        android:maxLines="1"
        android:textSize="12sp"
        android:id="@+id/item_team_schedule_detail_visit"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:gravity="center|left"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
</LinearLayout>