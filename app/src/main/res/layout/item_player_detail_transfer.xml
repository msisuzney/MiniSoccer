<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_marginLeft="10dp"
              android:layout_marginStart="10dp"
              android:layout_width="match_parent"
              android:minHeight="50dp"
              android:layout_height="50dp">
<TextView
    android:id="@+id/player_detail_announced_date"
    android:gravity="center|left"
    android:maxLines="1"
    android:textSize="10sp"
    android:text="2014-07"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent"/>
    <View
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:id="@+id/player_detail_from"
        android:gravity="center|start"
        android:text="巴塞罗那"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <View
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:src="@drawable/arrow"
        android:layout_weight="0.3"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <View
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:id="@+id/player_detail_to"
        android:gravity="center|start"
        android:text="巴塞罗那"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+id/player_detail_transfer_type"
        android:text="转会"
        android:maxLines="1"
        android:layout_weight="0.6"
        android:textSize="10sp"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <TextView
        android:textColor="@android:color/black"
        android:gravity="center"
       android:id="@+id/player_detail_transfer_money"
        android:text="811 M EUR"
        android:textSize="10sp"
        android:maxLines="1"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
</LinearLayout>